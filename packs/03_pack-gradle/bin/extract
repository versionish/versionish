#!/usr/bin/env bash

# exporting JAVA_HOME to suppress a stupid warning message on stdout
export JAVA_HOME=/usr

gradle_wrapper() {
  ./gradlew -q printVersion
  local return_code=$?
  if [[ $return_code -ne 0 ]]; then
    exit 1
  fi
}

if [[ ${1+x} == "" ]]; then
  echo "version file name was not be given"
  exit 1
fi

gradle_wrapper $1
exit 0
